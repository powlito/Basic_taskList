<Window x:Class="WpfApp.AddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add/Edit Item" Height="200" Width="400">
    <Grid>
        <StackPanel>
            <TextBox x:Name="TextBoxItem" Margin="10"/>
            <ComboBox x:Name="ComboBoxDay" Margin="10">
                <ComboBoxItem Content="Monday"/>
                <ComboBoxItem Content="Tuesday"/>
                <ComboBoxItem Content="Wednesday"/>
                <ComboBoxItem Content="Thursday"/>
                <ComboBoxItem Content="Friday"/>
                <ComboBoxItem Content="Saturday"/>
                <ComboBoxItem Content="Sunday"/>
            </ComboBox>
            <Button Content="Save" Click="SaveButton_Click" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
